{
  "name": "shopsupport-pro",
  "version": "1.0.0",
  "description": "Complete customer support platform for Shopify stores",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && vite",
    "dev:server": "cd server && tsx watch index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "cd server && esbuild index.ts --bundle --platform=node --target=node18 --format=esm --outfile=../api/index.js --external:ws",
    "start": "node api/index.js",
    "db:generate": "cd server && drizzle-kit generate",
    "install:client": "cd client && npm install",
    "install:all": "npm install && npm run install:client",
    "db:migrate": "cd server && drizzle-kit migrate",
    "db:studio": "cd server && drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@tanstack/react-query": "^5.17.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.0",
    "postgres": "^3.4.7",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.8",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
