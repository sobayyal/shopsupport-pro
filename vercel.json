{
  "version": 2,
  "builds": [
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.ts", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/widget.js",
      "dest": "/api/index.ts"
    },
    {
      "src": "/setup",
      "dest": "/api/index.ts"
    },
    {
      "src": "/integration",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
